<div class="row">
  
<div class="col-md-4 col-md-offset-4">
  <div class="well">
      <%= form_for @contact do |f| %>
     

      <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
          <%= f.label :comments %><br>
          <%= f.text_area :comments, class: 'form-control' %>
      </div>
      <div class="actions">
          <%= f.submit %>
      </div>
    
      <% end %>
  </div>
</div>